@model Adres
@{
    ViewData["Title"] = "Adres Bilgileri";

}

<h1>Adres Bilgileri</h1>

@using (Html.BeginForm())
{
    <table class="table table-striped table-hover">
        <tr>
            <td>Sehir</td>
            <td>
                @Html.EditorFor(model=>model.Sehir)
            </td>
        </tr>


        <tr>
            <td>İlçe</td>
            <td>
                @Html.EditorFor(model=>model.Ilce)
            </td>
        </tr>


        <tr>
            <td>Acık Adres</td>
            <td>
                @Html.EditorFor(model=>model.AcikAdres)
            </td>
        </tr>


        <tr>
            <td></td>
            <td>
                <input type="submit" value="Kaydet" />
            </td>
        </tr>


    </table>


}
<hr />
@{
    if (Model is not null) // model null-boş değilse ekrana aşağıdaki verileri yazdır.
    {
          <table class="table table-striped table-hover">
        <tr>
            <td>Sehir</td>
            <td>
                @Model.Sehir
            </td>
        </tr>


        <tr>
            <td>İlçe</td>
            <td>
              @Model.Ilce
            </td>
        </tr>


        <tr>
            <td>Acık Adres</td>
            <td>
               @Model.AcikAdres
            </td>
        </tr>


        <tr>
            <td></td>
            <td>
                <input type="submit" value="Kaydet" />
            </td>
        </tr>


    </table>
    }
}


