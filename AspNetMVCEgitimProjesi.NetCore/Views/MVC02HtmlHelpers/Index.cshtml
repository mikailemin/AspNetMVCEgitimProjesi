    Html Label Oluşturma
</h3>

@Html.Label("lblAd", " Html label elementi")
<h3>
    password ekleme kısmmı

</h3>
@Html.Password("txtPasword")
<hr />


<h3>
    html helpers ile form oluşturma
</h3>


@using (Html.BeginForm())
{

    <h4>Kullanıcı Adı</h4>
    @Html.Editor("txtKullaniciAdi")
    <h4>Şifre</h4>
    @Html.Password("txtPassword")
    <br />
    <input type="submit" value="Giriş" />
}

<h3>Listbox Elemnti Kullanımı</h3>

@{
    SelectListItem[] liste = new SelectListItem[3]
                    {

        new SelectListItem() { Text="Bilgisayar"},
        new SelectListItem() { Text="Elektronik"},
        new SelectListItem() { Text="Telefon"}
            };
    string htmlRawOrnek = "<h5>html raw ile ekrana html içerik yazdırma</h5>";

}
@Html.ListBox("lbliste",liste)

<hr />
<h3>RadioButton  Elementi Kullanımı</h3>

@Html.RadioButton("onay","onaylıyorum") sözleşmeyi onaylıyorum
<hr />

<h3>html raw ile ekrana html içerik yazdırma</h3>
@htmlRawOrnek
@Html.Raw(@htmlRawOrnek)


<hr />
<h2>İletişim Formu</h2>

@using (Html.BeginForm())
{
    <div class="container">



        <div class="row mb-3">

            <div class="col">
                Adınız :

            </div>
            <div class="col">

                @Html.TextBox("txtAd")

            </div>

        </div>

        <div class="row mb-3">

            <div class="col">
                Soyadınız :
            </div>
            <div class="col">
                @Html.TextBox("txtSoyad")

            </div>
        </div>

        <div class="row mb-3">
            <div class="col">
                Telefon Numaranız :
            </div>

            <div class="col">

                @Html.TextBox("txtTelefon",null,null,new {@class="form-control"})
            </div>
        </div>


        <div class="row mb-3">
            <div class="col">
                Mesajınız :
            </div>
            <div class="col">
                @Html.TextArea("txtMesaj",null,new {@class="form-control"})
            </div>
        </div>


        <div class="row">

            <div class="col text-center">
                    <input type="submit" value="Gönder" class="btn btn-primary" />


            </div>

        </div>





    </div>



}



